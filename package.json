{
  "name": "vscodethemedevkit",
  "displayName": "VscodeThemeDevKit",
  "description": "ðŸš€ A toolkit for creating VSCode themes",
  "publisher": "BrunoCiccarino",
  "version": "0.0.1",
  "icons": "./img/image.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/BrunoCiccarino/VscodeThemeDevKit"
  },
  "engines": {
    "vscode": "^1.60.0"  
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscodethemedevkit.createThemeStructure"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscodethemedevkit.createThemeStructure",
        "title": "Create Theme Structure"
      }
    ],
    "keybindings": [
      {
        "command": "vscodethemedevkit.createThemeStructure",
        "key": "ctrl+shift+3",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",  
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
